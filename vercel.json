{
    "version": 2,
    "builds": [
      {
        "src": ".",
        "use": "@vercel/node"
      }
    ],
    "env": {
      "MY_VAR": "value"
    },
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/index.html"
      }
    ],
    "builds": [
      {
        "src": "api",
        "use": "@vercel/node"
      }
    ],
    "rewrites": [ 
    { "source": "/(.*)", "destination": "/" } ], 
    "redirects": [ { "source": "/old-path", "destination": "/new-path", "statusCode": 301 } ]
  }

  